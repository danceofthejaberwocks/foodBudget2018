<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="foodBudget2018.App">
	<Application.Resources>


        <!--Styles for main menu-->
        <Style TargetType="Button"  x:Key="Menu">
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="FontFamily" Value="Swiss"/>
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="BackgroundColor" Value="DarkBlue"/>
        </Style>
        
        <!-- Styles for adding recipe-->
        <Style TargetType="Button" x:Key="addRecipe">
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="FontFamily" Value="Swiss"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="BackgroundColor" Value="BlueViolet"/>

        </Style>

    </Application.Resources>
</Application>
